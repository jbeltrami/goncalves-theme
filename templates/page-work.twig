{% extends "base.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-5 offset-md-1">
				<img class="w-50" src="{{post.meta('content_area').side_image.url}}" alt="">
			</div>
			<div class="col-md-5">
				<p>
					{{post.meta('content_area').text_area}}
				</p>
			</div>
		</div>

		<div class="row align-items-center justify-content-center">
			<div class="col-md-4 d-flex align-items-center justify-content-center">
				<img src="{{post.meta('content_area').central_image.url}}" alt="">
			</div>
		</div>

		<div class="row no-gutters">
			{% for item in post.meta('featured_jobs') %}
				<div class="col-md-4">
					<a href="{{site.url}}/{{item.job.slug}}">
						<div class="thumb-hover">
							{{item.job.title}}
						</div>
						<img class="w-100" src="{{Image(item.job.gif)}}" alt="{{Image(item.job.gif).alt}}">
					</a>
				</div>

			{% endfor %}

		</div>
	</div>


{% endblock %}
