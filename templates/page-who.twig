{% extends "base.twig" %}

{% block content %}
<div class="who">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1">
				<p class="text-center">{{post.intro}}</p>
			</div>
		</div>

		<div class="row align-items-center justify-content-center">
			<div class="col-md-4 d-flex align-items-center justify-content-center">
				<img src="{{Image(post.page_break)}}" alt="">
			</div>
		</div>

		<div class="row">
			<div class="col-md-8 offset-md-3 hello-you">
				<img class="img-fluid" src="{{Image(post.upper_image)}}" alt="">
			</div>
				
			<div class="col-md-6">
				<div class="self-portrait">
					<img class="img-fluid" src="{{Image(post.self_portrait)}}" alt="">
				</div>
			</div>

			<div class="col-md-6">
				<p>{{post.content}}</p>

				<div class="toolbox__wrapper">
					<img class="toolbox__main" src="{{Image(post.lower_image)}}" alt="">

					<div class="toolbox__skill--wrapper">
					{% for item in post.meta('skills') %}
					<div class="toolbox__skill--single">
						<img src="{{ item.skills.url }}" alt="">
					</div>
						
					{% endfor %}
					</div>

				</div>
			</div>
		</div>
	</div>

</div>
{% endblock %}